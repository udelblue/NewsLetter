@{
    ViewData["Title"] = "News Letter";
}

<div class="container mt-35">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">Sign Up for Our Newsletter</h3>
                </div>
                <div class="card-body">
                    <form>
                        <div class="form-group">
                            <label for="email">Email address</label>
                            <input type="email" class="form-control" id="email" placeholder="Enter your email">
                        </div>
                        <button type="submit" class="btn btn-primary btn-block mt-3" id="subscribeButton" disabled>Subscribe</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function() {
            $('#email').on('input', function() {
                var email = $(this).val();
                var isValidEmail = /^[^\s@@]+@@[^\s@@]+\.[^\s@@]+$/.test(email);
                $('#subscribeButton').prop('disabled', !isValidEmail);
            });
        });
    </script>
}

